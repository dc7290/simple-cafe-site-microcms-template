{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "importsNotUsedAsValues": "remove",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@images/*": ["src/images/*"],
      "@libs/*": ["src/libs/*"],
      "@global/*": ["src/global/*"],
      "@type/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
